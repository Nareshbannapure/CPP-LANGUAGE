	    	cout << "--------\t--------\t--------\t------\t-------\t------\t-------\t" << endl;
		}
	    
	    void getData()
	    {
	    	cout << hotel_id <<"\t"<< hotel_name <<"\t"<< hotel_type <<"\t"<< hotel_rating <<"\t"<< hotel_location <<"\t\t"<< hotel_establish_year <<"\t"<< hotel_staff_quantity <<"\t\t"<< hotel_room_quantity << endl;
		}
};

